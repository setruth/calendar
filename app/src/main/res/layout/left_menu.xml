<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_gravity="start"
    android:background="@drawable/menu_layout_style"
    android:elevation="20dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="菜单"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/con_back"/>
       <TextView
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="18dp"
           android:text="所有课程"
           android:id="@+id/menu_all_class"
           android:textColor="@color/black"
           android:clickable="true"
           android:foreground="?selectableItemBackground"
           android:textSize="18sp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/menu_set_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="设置本周是第几周"
        android:textColor="@color/black"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:textSize="18sp"/>
    <EditText
        android:gravity="center"
        android:id="@+id/menu_create_wait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:enabled="false"
        android:text="新建待办"
        android:background="@null"
        android:clickable="false"
        android:textSize="18sp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/menu_export_class_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="导出当前课程表"
        android:textColor="@color/black"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:textSize="18sp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/menu_import_class_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="导入课程表"
        android:textColor="@color/black"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:textSize="18sp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/menu_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="用户须知"
        android:textColor="@color/black"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:textSize="18sp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/menu_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="关于"
        android:textColor="@color/black"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:textSize="18sp"/>

</LinearLayout>